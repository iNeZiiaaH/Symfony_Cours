{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!
{% endblock %}


{% block body %}
	{({{ dump(articles) }})}
	<div class="articles-wrapper">
		{% for article in articles %}
			<div class="articles">
				<h2>{{ article.title }}</h2>
				<p>{{ article.category.name }}</p>
			</div>
		{% endfor %}
		
	</div>
	<style>
		.articles-wrapper {
			text-align: center;
		}
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

{% endblock %}
