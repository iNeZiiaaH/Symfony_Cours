{% extends 'base.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block body %}
	<div class="container">
		<p>
			<a href="{{ path('category_item', { id: article.category.id }) }}">Retour à la catégorie
				{{ article.category.name }}</a>
		</p>
		<h1>{{ article.title }}</h1>
		<h2>{{ article.category.name }}</h2>
		<h3>{{ article.dateCreated|date('d/m/Y') }}</h3>

		{{ article.content }}
	</div>
{% endblock %}

